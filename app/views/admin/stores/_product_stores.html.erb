<table border="0" cellspacing="0" cellpadding="0" id="index_table_stores" class="index_table index" paginator="true" >
  <thead>
    <tr>
      <th class="sortable col-name">Name</th>
      <th class="sortable col-name">Price</th>
      <th class="col col-actions">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% index_count = 0 %>
    <% product_stores.each do |product_store| %>
      <tr class="<%= ((index_count % 2) == 0) ? 'even' : 'odd' %>">
        <td class="col"><%=product_store.product.name %></td>
        <td class="col">
          <span class="price">$<%=product_store.price %></span>
          <div class="editable" style="display: none;">
            <input type="number" name="price" value="<%=product_store.price%>" style="width: 80px;">
            <a href="javascript:void(0)" class="save" pstore_id="<%=product_store.id%>">Save</a>
            <a href="javascript:void(0)" class="edit_cancel">Cancel</a>
          </div>
        </td>
        <td class="col col-actions">
          <div class="table_actions">
            <%= link_to "Edit", "javascript:void(0)", class: 'edit_price', pstore_id: product_store.id, pstore_price: product_store.price %>
            <%= link_to "Remove from Store", delete_from_store_admin_store_path(@store, product_id: product_store.product.id), class: "remove", method: :post %>
          </div>
        </td>
      </tr>
      <% index_count += 1 %>
    <% end %>
  </tbody>
</table>